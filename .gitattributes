# Set default behavior to automatically normalize line endings
* text=auto

# Force the line endings for specific file types
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.markdown text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.py text eol=lf
*.sh text eol=lf
*.mdx text eol=lf
*.config.ts text eol=lf

# Keep .gitignore and .gitattributes with LF
.gitignore text eol=lf
.gitattributes text eol=lf