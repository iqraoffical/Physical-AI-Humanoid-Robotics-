<?xml version="1.0" encoding="UTF-8"?>
<robot name="humanoid_robot">
  <!-- Include the main robot model -->
  <xacro:include filename="$(find digital_twin)/urdf/humanoid.main.urdf.xacro" />
  
  <!-- Load the 24+ DOF humanoid model as specified -->
  <xacro:humanoid_robot_macro 
    name="humanoid" 
    parent="world"
    x="0.0" 
    y="0.0" 
    z="0.8">
  </xacro:humanoid_robot_macro>

  <!-- Gazebo-specific configurations -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <parameters>$(find digital_twin)/config/ros_control.yaml</parameters>
      <!-- Use simulation time for real-time factor -->
      <use_sim_time>true</use_sim_time>
    </plugin>
  </gazebo>

  <!-- LiDAR Sensor Configuration -->
  <gazebo reference="lidar_link">
    <sensor type="gpu_ray" name="humanoid_lidar">
      <pose>0 0 0 0 0 0</pose>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159</min_angle> <!-- -π -->
            <max_angle>3.14159</max_angle>   <!-- π -->
          </horizontal>
          <vertical>
            <samples>1</samples>
            <resolution>1</resolution>
            <min_angle>0</min_angle>
            <max_angle>0.1745</max_angle>    <!-- ~10 degrees -->
          </vertical>
        </scan>
        <range>
          <min>0.1</min>
          <max>10.0</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name="lidar_controller" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <namespace>/sensors</namespace>
          <remapping>~/out:=lidar_scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>lidar_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Depth Camera Configuration -->
  <gazebo reference="camera_link">
    <sensor type="depth" name="humanoid_depth_camera">
      <pose>0 0 0 0 0 0</pose>
      <update_rate>30</update_rate>
      <camera name="head_camera">
        <horizontal_fov>1.047</horizontal_fov> <!-- 60 degrees -->
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>10</far>
        </clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_openni_kinect.so">
        <ros>
          <namespace>/sensors</namespace>
          <remapping>depth/image_raw:=depth_camera/image_raw</remapping>
          <remapping>rgb/image_raw:=depth_camera/rgb/image_raw</remapping>
        </ros>
      </plugin>
    </sensor>
  </gazebo>

  <!-- IMU Sensor Configuration -->
  <gazebo reference="imu_link">
    <sensor type="imu" name="humanoid_imu">
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <pose>0 0 0 0 0 0</pose>
      <plugin name="imu_controller" filename="libgazebo_ros_imu.so">
        <ros>
          <namespace>/sensors</namespace>
          <remapping>~/out:=imu/data</remapping>
        </ros>
        <initial_orientation_as_reference>false</initial_orientation_as_reference>
      </plugin>
    </sensor>
  </gazebo>

</robot>