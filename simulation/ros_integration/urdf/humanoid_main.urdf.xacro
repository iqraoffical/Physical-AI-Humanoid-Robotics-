<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!--
  Digital Twin Configuration for Humanoid Robot
  Based on the data model and specifications:
  - 24+ DOF humanoid model
  - Physics-accurate simulation parameters  
  - Sensor configurations (LiDAR, Depth Camera, IMU)
  -->

  <xacro:macro name="humanoid_robot" params="name parent *origin">

    <!-- Robot Base Link -->
    <link name="${name}_base_link">
      <inertial>
        <mass value="10.0"/>
        <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
      </inertial>
      <visual>
        <geometry>
          <box size="0.3 0.3 0.6"/>
        </geometry>
        <material name="light_grey">
          <color rgba="0.7 0.7 0.7 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="0.3 0.3 0.6"/>
        </geometry>
      </collision>
    </link>

    <!-- Connect base to parent world -->
    <joint name="${name}_base_joint" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="${name}_base_link"/>
    </joint>

    <!-- Spine/Body -->
    <joint name="torso_joint" type="revolute">
      <parent link="${name}_base_link"/>
      <child link="torso_link"/>
      <origin xyz="0.0 0.0 0.3" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="${-pi/2}" upper="${pi/2}" effort="100" velocity="${pi/2}"/>
      <dynamics damping="5" friction="1"/>
    </joint>

    <link name="torso_link">
      <inertial>
        <mass value="5.0"/>
        <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.05"/>
      </inertial>
      <visual>
        <geometry>
          <box size="0.25 0.2 0.5"/>
        </geometry>
        <material name="light_blue">
          <color rgba="0.5 0.5 1.0 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="0.25 0.2 0.5"/>
        </geometry>
      </collision>
    </link>

    <!-- Head -->
    <joint name="head_joint" type="revolute">
      <parent link="torso_link"/>
      <child link="head_link"/>
      <origin xyz="0.0 0.0 0.3" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="${-pi/3}" upper="${pi/3}" effort="10" velocity="${pi/2}"/>
      <dynamics damping="1" friction="0.1"/>
    </joint>

    <link name="head_link">
      <inertial>
        <mass value="2.0"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      </inertial>
      <visual>
        <geometry>
          <sphere radius="0.1"/>
        </geometry>
        <material name="skin_color">
          <color rgba="0.8 0.6 0.4 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <sphere radius="0.1"/>
        </geometry>
      </collision>
    </link>

    <!-- Sensors -->
    <!-- IMU Mounting -->
    <joint name="imu_mounting" type="fixed">
      <parent link="head_link"/>
      <child link="imu_link"/>
      <origin xyz="0.0 0.0 0.05" rpy="0 0 0"/>
    </joint>

    <link name="imu_link">
      <inertial>
        <mass value="0.01"/>
        <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
      </inertial>
    </link>

    <!-- LiDAR Mounting -->
    <joint name="lidar_mounting" type="fixed">
      <parent link="head_link"/>
      <child link="lidar_link"/>
      <origin xyz="0.05 0.0 0.05" rpy="0 0 0"/>
    </joint>

    <link name="lidar_link">
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="1e-4" ixy="0" ixz="0" iyy="1e-4" iyz="0" izz="1e-4"/>
      </inertial>
    </link>

    <!-- Depth Camera Mounting -->
    <joint name="camera_mounting" type="fixed">
      <parent link="head_link"/>
      <child link="camera_link"/>
      <origin xyz="0.07 0.0 0.0" rpy="0 0 0"/>
    </joint>

    <link name="camera_link">
      <inertial>
        <mass value="0.05"/>
        <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
      </inertial>
    </link>

    <!-- Left Arm -->
    <joint name="left_shoulder_yaw" type="revolute">
      <parent link="torso_link"/>
      <child link="left_upper_arm_link"/>
      <origin xyz="0.0 0.15 0.1" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-pi/2}" upper="${pi/2}" effort="50" velocity="${pi/2}"/>
      <dynamics damping="2" friction="0.5"/>
    </joint>

    <link name="left_upper_arm_link">
      <inertial>
        <mass value="1.0"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      </inertial>
      <visual>
        <geometry>
          <capsule length="0.2" radius="0.05"/>
        </geometry>
        <material name="green">
          <color rgba="0.0 1.0 0.0 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <capsule length="0.2" radius="0.05"/>
        </geometry>
      </collision>
    </link>

    <joint name="left_elbow" type="revolute">
      <parent link="left_upper_arm_link"/>
      <child link="left_lower_arm_link"/>
      <origin xyz="0.0 0.0 -0.2" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="0" upper="${pi/2}" effort="30" velocity="${pi/2}"/>
      <dynamics damping="1" friction="0.1"/>
    </joint>

    <link name="left_lower_arm_link">
      <inertial>
        <mass value="0.5"/>
        <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
      </inertial>
      <visual>
        <geometry>
          <capsule length="0.15" radius="0.04"/>
        </geometry>
        <material name="green">
          <color rgba="0.0 1.0 0.0 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <capsule length="0.15" radius="0.04"/>
        </geometry>
      </collision>
    </link>

    <!-- Right Arm -->
    <joint name="right_shoulder_yaw" type="revolute">
      <parent link="torso_link"/>
      <child link="right_upper_arm_link"/>
      <origin xyz="0.0 -0.15 0.1" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-pi/2}" upper="${pi/2}" effort="50" velocity="${pi/2}"/>
      <dynamics damping="2" friction="0.5"/>
    </joint>

    <link name="right_upper_arm_link">
      <inertial>
        <mass value="1.0"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      </inertial>
      <visual>
        <geometry>
          <capsule length="0.2" radius="0.05"/>
        </geometry>
        <material name="green">
          <color rgba="0.0 1.0 0.0 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <capsule length="0.2" radius="0.05"/>
        </geometry>
      </collision>
    </link>

    <joint name="right_elbow" type="revolute">
      <parent link="right_upper_arm_link"/>
      <child link="right_lower_arm_link"/>
      <origin xyz="0.0 0.0 -0.2" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="0" upper="${pi/2}" effort="30" velocity="${pi/2}"/>
      <dynamics damping="1" friction="0.1"/>
    </joint>

    <link name="right_lower_arm_link">
      <inertial>
        <mass value="0.5"/>
        <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
      </inertial>
      <visual>
        <geometry>
          <capsule length="0.15" radius="0.04"/>
        </geometry>
        <material name="green">
          <color rgba="0.0 1.0 0.0 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <capsule length="0.15" radius="0.04"/>
        </geometry>
      </collision>
    </link>

    <!-- Left Leg -->
    <joint name="left_hip_yaw" type="revolute">
      <parent link="${name}_base_link"/>
      <child link="left_thigh_link"/>
      <origin xyz="0.0 0.08 -0.1" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="${-pi/3}" upper="${pi/3}" effort="100" velocity="${pi/2}"/>
      <dynamics damping="5" friction="1"/>
    </joint>

    <link name="left_thigh_link">
      <inertial>
        <mass value="2.0"/>
        <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.02"/>
      </inertial>
      <visual>
        <geometry>
          <capsule length="0.3" radius="0.06"/>
        </geometry>
        <material name="blue">
          <color rgba="0.0 0.0 1.0 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <capsule length="0.3" radius="0.06"/>
        </geometry>
      </collision>
    </link>

    <joint name="left_knee" type="revolute">
      <parent link="left_thigh_link"/>
      <child link="left_shin_link"/>
      <origin xyz="0.0 0.0 -0.3" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="0" upper="${pi/2}" effort="80" velocity="${pi/2}"/>
      <dynamics damping="3" friction="0.5"/>
    </joint>

    <link name="left_shin_link">
      <inertial>
        <mass value="1.5"/>
        <inertia ixx="0.015" ixy="0" ixz="0" iyy="0.015" iyz="0" izz="0.015"/>
      </inertial>
      <visual>
        <geometry>
          <capsule length="0.25" radius="0.05"/>
        </geometry>
        <material name="blue">
          <color rgba="0.0 0.0 1.0 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <capsule length="0.25" radius="0.05"/>
        </geometry>
      </collision>
    </link>

    <joint name="left_ankle" type="revolute">
      <parent link="left_shin_link"/>
      <child link="left_foot_link"/>
      <origin xyz="0.0 0.0 -0.25" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="${-pi/6}" upper="${pi/6}" effort="40" velocity="${pi/2}"/>
      <dynamics damping="1" friction="0.1"/>
    </joint>

    <link name="left_foot_link">
      <inertial>
        <mass value="0.8"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      </inertial>
      <visual>
        <geometry>
          <box size="0.15 0.08 0.05"/>
        </geometry>
        <material name="brown">
          <color rgba="0.6 0.4 0.2 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="0.15 0.08 0.05"/>
        </geometry>
      </collision>
    </link>

    <!-- Right Leg -->
    <joint name="right_hip_yaw" type="revolute">
      <parent link="${name}_base_link"/>
      <child link="right_thigh_link"/>
      <origin xyz="0.0 -0.08 -0.1" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="${-pi/3}" upper="${pi/3}" effort="100" velocity="${pi/2}"/>
      <dynamics damping="5" friction="1"/>
    </joint>

    <link name="right_thigh_link">
      <inertial>
        <mass value="2.0"/>
        <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.02"/>
      </inertial>
      <visual>
        <geometry>
          <capsule length="0.3" radius="0.06"/>
        </geometry>
        <material name="blue">
          <color rgba="0.0 0.0 1.0 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <capsule length="0.3" radius="0.06"/>
        </geometry>
      </collision>
    </link>

    <joint name="right_knee" type="revolute">
      <parent link="right_thigh_link"/>
      <child link="right_shin_link"/>
      <origin xyz="0.0 0.0 -0.3" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="0" upper="${pi/2}" effort="80" velocity="${pi/2}"/>
      <dynamics damping="3" friction="0.5"/>
    </joint>

    <link name="right_shin_link">
      <inertial>
        <mass value="1.5"/>
        <inertia ixx="0.015" ixy="0" ixz="0" iyy="0.015" iyz="0" izz="0.015"/>
      </inertial>
      <visual>
        <geometry>
          <capsule length="0.25" radius="0.05"/>
        </geometry>
        <material name="blue">
          <color rgba="0.0 0.0 1.0 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <capsule length="0.25" radius="0.05"/>
        </geometry>
      </collision>
    </link>

    <joint name="right_ankle" type="revolute">
      <parent link="right_shin_link"/>
      <child link="right_foot_link"/>
      <origin xyz="0.0 0.0 -0.25" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="${-pi/6}" upper="${pi/6}" effort="40" velocity="${pi/2}"/>
      <dynamics damping="1" friction="0.1"/>
    </joint>

    <link name="right_foot_link">
      <inertial>
        <mass value="0.8"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      </inertial>
      <visual>
        <geometry>
          <box size="0.15 0.08 0.05"/>
        </geometry>
        <material name="brown">
          <color rgba="0.6 0.4 0.2 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="0.15 0.08 0.05"/>
        </geometry>
      </collision>
    </link>

  </xacro:macro>

</robot>